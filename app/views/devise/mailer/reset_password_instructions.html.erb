<% translate('devise.mailer.reset_password_instructions.body',
             locale: @resource.preference.locale,
             full_name: tag.strong(@resource.full_name)).each do |line| %>
  <p><%= line.html_safe %></p>
<% end %>

<p>
  <%= link_to translate('devise.mailer.reset_password_instructions.link_label',
                        locale: @resource.preference.locale),
              edit_password_url(@resource, reset_password_token: @token) %>
</p>

<p><%= translate('devise.mailer.reset_password_instructions.disclaimer',
                 locale: @resource.preference.locale) %></p>
